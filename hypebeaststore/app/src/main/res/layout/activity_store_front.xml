<github.chenupt.dragtoplayout.DragTopLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".StoreFront"
    tools:ignore="MergeRootFrame"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:dtlOpen="false"
    app:dtlCollapseOffset="0dp"
    android:id="@+id/draglayout">

    <!--top view-->
    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <FrameLayout
            android:id="@+id/filter_layouts"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <!--  <ImageView
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:src="@drawable/bike"
              android:scaleType="centerInside" />
  -->
    </LinearLayout>

    <!--content view-->
    <LinearLayout
        android:id="@+id/drag_content_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- for Text Tabs -->
        <it.neokree.materialtabs.MaterialTabHost
            android:id="@+id/materialTabHost"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:textColor="@color/common_background"
            app:primaryColor="@color/second_pref"
            app:accentColor="@color/card_face"
            app:hasIcons="false" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

</github.chenupt.dragtoplayout.DragTopLayout>