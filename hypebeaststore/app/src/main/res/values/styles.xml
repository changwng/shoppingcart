    <style name="button_spinner">
        <item name="android:background">@drawable/dropdown</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!--<style name="LoadButton" xmlns="http://schemas.android.com/apk/res/com.github.dmytrodanylyk.android-process-button">
    -->
    <style name="LoadButton" xmlns="http://schemas.android.com/apk/res-auto">
        <item name="android:textColor">@android:color/white</item>
        <item name="pb_colorNormal">@android:color/holo_blue_light</item>
        <item name="pb_colorPressed">@android:color/holo_blue_dark</item>
        <item name="pb_colorComplete">@color/light_green_a100</item>
        <item name="pb_textComplete">Done!</item>
        <item name="pb_textProgress">Loading</item>
        <item name="pb_textError">Error</item>
        <item name="pb_colorError">@color/red_error</item>
    </style>
